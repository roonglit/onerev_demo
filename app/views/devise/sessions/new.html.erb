<div class="flex flex-col items-center justify-center p-6 mx-auto md:h-full pt:mt-0 dark:bg-gray-900">
    <div class="w-full p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
            Log in
        </h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div>
                <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "Enter your email",
                  input_html: { autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" } %>
            </div>
            <div>
                <%= f.input :password,
                  required: false,
                  placeholder: "Enter your password",
                  input_html: { autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" } %>
            </div>
            <div class="mt-3">
              <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
              <div class="ml-3 text-sm">
                  <label for="remember" class="font-medium text-gray-900 dark:text-white">Remember me</label>
              </div>
            </div>
            <div class="text-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400">
              <%= render "devise/shared/links" %>
            </div>
            <div class="form-actions text-center mt-5">
              <%= f.button :submit, "Log in", input_html: { class: "w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" } %>
            </div>
        <% end %>
    </div>
</div>